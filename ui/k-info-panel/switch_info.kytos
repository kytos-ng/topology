  padding: 0.5em 0 1em 0.3em;
  font-size: .8em;
  height: 190px;
  overflow-x: hidden;
  overflow-y: auto;
}
.link-table table {
  display: table;
  width: 100%;
  table-layout: fixed;
  border-collapse: collapse;
}
